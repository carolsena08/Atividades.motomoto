<body>
    
    <input type="text" id="nome" placeholder="Nome do Cliente"></input>
    <button onclink="captura();"> Capturar nome </button>
    <p id="resposta"> Aqui est√° a resposta</p>
    <script> 
        function captura(){
            let n = document.getElementById("nome").value;
            document.getElementById("resposta").innerText = n;
    }
    </script>

